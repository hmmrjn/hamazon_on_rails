<p>
  <strong>名前:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>メールアドレス:</strong>
  <%= @user.email %>
</p>

<% if @user_logged_in && @user_logged_in.id == @user.id %>

  <%= link_to '会員情報の編集', edit_user_path(@user) %>

  <h2>注文履歴</h2>
  <ul>
    <% @user.orders.each do |order| %>
    <li>
      <%= order.created_at.strftime("%Y-%m-%d") %>
      <%= order.total_amount.to_s(:delimited) %>円
      <%= link_to "詳細", "/order/#{order.id}" %>
    </li>
    <% end %>
    <% if @user.orders.blank? %>
      <li>まだ注文がありません</li>
    <% end %>
  </ul>

<% end %>

<h2>レビュー</h2>
<ul>
  <% @user.reviews.each do |review| %>
  <li>
    <%= review.created_at.strftime("%Y-%m-%d") %>
    ★<%= review.score %>
    <%= review.item.name %>
    <%= review.title %>
    <%= link_to "詳細・編集", review %>
  </li>
  <% end %>
  <% if @user.reviews.blank? %>
    <li>まだレビューを投稿していません</li>
  <% end %>
</ul>

<h2>出品一覧</h2>
<ul>
  <% @user.items.each do |item| %>
  <li>
    <%= link_to item.name, item %>
    <%= item.price.to_s(:delimited) %>円
    <%= item.created_at.strftime("%Y-%m-%d") %>
  </li>
  <% end %>
  <% if @user.items.blank? %>
    <li>まだ出品がありません</li>
  <% end %>
</ul>
